page {
        background-color: #f6f7fb;
}

.card {
        background-color: #fff;
        margin-left: 20rpx;
        margin-right: 20rpx;
        margin-top: 30rpx;
        margin-bottom: 30rpx;
        border: 1px solid #e9e9e9;
        border-radius: 15rpx;
        box-shadow: 10rpx 10rpx 5rpx #e9e9e9;
        padding: 30rpx;
}

.head {
        height: 60rpx;
        display: flex;
        align-items: center;
        justify-content: space-between;
}

.title {
        font-size: 20px;
        position: relative;
        color: #373737;
}

.oval {
        width: 15rpx;
        height: 15rpx;
        background-color: #fe5438;
        border-radius: 50%;
        position: absolute;
        top: 0;
        right: -10rpx;
}

.time {
        font-size: 14px;
        color: #6e6e6e;
}

.content {
        margin-top: 15rpx;
        font-size: 16px;
        min-height: 100%;
        color: #4b4b4b;
        font-family: PingFangSC-Medium;
        text-overflow: ellipsis;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
}




::-webkit-scrollbar {
        width: 0;
        height: 0;
        color: transparent;
}
