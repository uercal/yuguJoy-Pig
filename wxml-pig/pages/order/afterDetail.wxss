    border-bottom: 1rpx solid #f1f1f1;
}

.flow-message-box .cont {
    padding: 10px 0;
    color: #000;
}

.order-cont {
    /* padding: 12rpx 0; */
    justify-content: space-between;
}

.order-cont .order-num text, .order-cont .time {
    color: #888;
}

.order-cont .order-num text, .order-cont .order-time text {
    color: #777;
    font-size: 26rpx;
}

.order-header {
    border-bottom: 1rpx solid #f1f1f1;
    padding: 15rpx 0;
}

.order-header text {
    font-size: 28rpx;
}

.order-header text.title {
    color: #333;
}

.flow-list .header {
    position: relative;
    padding: 15rpx 0;
    background: #fff;
    border-bottom: 1rpx solid #f1f1f1;
}

.flow-list .header text {
    padding-left: 80rpx;
    font-size: 32rpx;
}

.flow-list .header image {
    width: 34rpx;
    height: 37rpx;
    position: absolute;
    top: 50%;
    margin-top: -18rpx;
    left: 15px;
}

