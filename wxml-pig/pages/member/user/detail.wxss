@import "/pages/search/index.wxss";

.cont-box {
    background-color: #eff9ff;
}

.search-input {
    width: 100%;
    border-radius: 5px;
}

.serch-button button {
    background-color: #7898e8;
}

/* type */

.type {
    border-bottom: 1px solid #e7e7e7;
    height: 100rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 30rpx;
}

.type-item {
    width: 50%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.type-c {
    height: 100%;
    display: flex;
    align-items: center;
    position: relative;
}

.active .type-c {
    border-bottom: 2px solid #5fc6ff;
}

.active .type-c text {
    color: #096dd9;
    /* font-weight: bold; */
}

.type text {
    font-family: PingFangSC-Medium;
    font-size: 14px;
    color: #888;
    text-align: center;
    font-weight: 600;
}

/* list */

.user {
    margin: 30rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.1);
}

.user-type {
    height: 40rpx;
    background-color: #7898e8;
    font-size: 13px;
    color: #fff;
    padding: 15rpx 20rpx 10rpx 20rpx;
    vertical-align: middle;
}

.user-info {
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.info-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20rpx;
}

.info-item image {
    width: 35rpx;
    height: 35rpx;
}

.info-item text {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #888;
}

.arrow1 {
    position: absolute;
    right: 20rpx;
    bottom: 50%;
    margin-bottom: 6rpx;
    content: '';
    width: 20rpx;
    height: 20rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    transform: rotate(45deg);
}

/*  */

.info-title {
    height: 50rpx;
    width: 100%;
    display: flex;
    align-items: center;
}

.er {
    width: 5rpx;
    height: 60%;
    background-color: #fbcdc4;
}

.info-title text {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #888;
}

.image-info {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}

.image-info image {
    width: 100%;
    height: 300rpx;
    box-shadow: -1px 0px 5px rgba(50, 50, 50, 0.5);
}

.image-info-2 {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.image-info-2 image {
    width: 300rpx;
    height: 300rpx;
    box-shadow: -1px 0px 5px rgba(50, 50, 50, 0.5);
}

.image-info-3 {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
}

.image-info-3 image {
    margin-bottom: 40rpx;
    width: 300rpx;
    height: 300rpx;
    box-shadow: -1px 0px 5px rgba(50, 50, 50, 0.5);
}
