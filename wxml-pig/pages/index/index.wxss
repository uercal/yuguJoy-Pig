/* 搜索框组件 */
@import "components/search/search.wxss";

/* banner组件 */
@import "components/banner/banner.wxss";

page {
    background-color: #fafafa;
}

.tab {
    height: 70px;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.tab-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50%;
    height: 100%;
}

.tab-nav-c {
    display: flex;
    align-items: center;
}

.tab-nav-c image {
    width: 40px;
    height: 40px;
}

.tab-nav-c text {
    margin-left: 10px;
    color: #666;
    font-size: 16px;
}

.column-divider {
    content: "";
    border-left: 1px solid #e5e5e5;
    height: 40px;
}

.list-title {
    background-color: #fff;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    padding: 20rpx 10rpx;
    height: 42px;
}

.list-name {
    font-family: PingFangSC-Semibold;
    font-size: 22px;
    color: #333;
    letter-spacing: -0.53px;
}

.list-nav {
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #999;
    letter-spacing: -0.29px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 62px;
}

.list-nav::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-top: 3rpx solid #ccc;
    border-right: 3rpx solid #ccc;
    transform: rotate(45deg);
}

/*  */

.list-goods {
    display: flex;
    flex-wrap: wrap;
}

.goods-nav {
    display: flex;
    flex-direction: column;
    width: 45%;
    height: 420rpx;
    background-color: #fff;
}

.goods-nav:nth-child(odd) {
    padding-left: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.goods-nav:nth-child(even) {
    margin-left: 10rpx;
    padding-right: 10rpx;
    margin-bottom: 10rpx;
}

.goods-img {
    width: 100%;
    height: 75%;
    position: relative;
}

.goods-img-bonus {
    width: 34px;
    height: 27px;
    position: absolute;
    right: 0;
    top: 0;
}

.goods-txt {
    display: flex;
    height: 25%;
    flex-direction: column;
    padding: 10rpx 10rpx;
    justify-content: flex-end;
}

.goods-price {
    font-family: PingFangSC-Medium;
    font-size: 12px;
    color: #e83828;
    letter-spacing: -0.22px;
}

.goods-name {
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #888;
    letter-spacing: -0.22px;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
