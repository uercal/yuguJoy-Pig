.card {
        margin: 40rpx 30rpx;
        border: 1px solid #eee;
        background-color: #fff;
        box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.1);
}

.card-head {
        height: 100rpx;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 0 30rpx;
}

.card-head text {
        font-family: PingFangSC-Medium;
        font-size: 18px;
        color: #353535;
}

.card-info {
        display: flex;
        padding: 0 30rpx;
        flex-direction: column;
}

.card-info textarea {
        width: 100%;
}

.text-bonus {
        height: 40rpx;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        padding: 20rpx 30rpx;
}

.text-bonus text {
        font-family: PingFangSC-Regular;
        font-size: 12px;
        color: #ccc;
}

.radio {
        width: 50%;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding-bottom: 20rpx;
}

.radio image {
        width: 50rpx;
        height: 50rpx;
}

.radio text {
        margin-left: 10rpx;
        font-family: PingFangSC-Regular;
        font-size: 14px;
        color: #888;
}

.info-item {
        display: flex;
        align-items: center;
        margin-bottom: 22rpx;
        width: 100%;
}

.info-item image {
        /* width: 40rpx !important; */
        width: 5%;
        /* height: 40rpx !important; */
}

.info-item text {
        margin-left: 30rpx;
        font-family: PingFangSC-Regular;
        font-size: 14px;
        color: #888;
        /* line-height: 42rpx; */
        width: 90%;
}

.pic-info {
        display: flex;
        align-items: center;
        margin-bottom: 10rpx;
}

.upload {
        width: 33.3333%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10rpx;
}

.upload image {
        width: 200rpx;
        height: 200rpx;
}

.footer {
        position: fixed;
        height: 90rpx;
        bottom: 0;
        width: 100%;
}

.sub {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #2150b7;
}

.sub text {
        font-family: PingFangSC-Regular;
        font-size: 16px;
        color: #fff;
}

.card-item {
        display: flex;
        flex-direction: column;
        width: 100%;
        padding: 20rpx 0;
        border-bottom: 1px solid #eee;
}

.item-head {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: space-between;
}

.item-title {
        display: flex;
        align-items: center;
}

.item-title image {
        width: 50rpx;
        height: 50rpx;
}

.item-title text {
        margin-left: 20rpx;
        font-family: PingFangSC-Regular;
        font-size: 14px;
        color: #888;
}

.scan {
        height: 45rpx;
        width: 90rpx;
}

/*  */

.card-equip {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        /* justify-content: flex-end; */
        width: 100%;
}

.equip-item {
        width: 90%;
        /* opacity: 0.5; */
        background: rgba(242, 242, 242, 0.5);
        border-radius: 2px;
        display: flex;
        align-items: center;
        margin: 20rpx 0;
}

.equip-item text {
        font-family: PingFangSC-Regular;
        font-size: 12px;
        color: #888;
}

.equip-info {
        padding: 10rpx 20rpx;
        display: flex;
        /* align-items: center; */
}

.info-name {
        text-align: right;
        width: 30%;
        overflow: hidden;
        white-space: nowrap;
}

.info-value {
        width: 70%;
        /* overflow: hidden; *//* white-space: nowrap; */
}

.equip-left {
        padding: 10rpx 0;
        width: 80%;
}

.equip-right {
        width: 20%;
        display: flex;
        justify-content: flex-end;
}

.equip-right image {
        width: 50rpx;
        height: 50rpx;
        margin-right: 10rpx;
}

/*  */

.price {
        display: flex;
        align-items: center;
        padding: 20rpx 10rpx;
        border-bottom: 1px solid #e5e5e5;
}

.price-title {
        width: 20%;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        border-right: 1px solid #e5e5e5;
}

.price text {
        font-family: PingFangSC-Regular;
        font-size: 14px;
        color: #888;
}

.price-holder {
        font-family: PingFangSC-Regular;
        font-size: 12px;
        color: #ccc;
}

.price input {
        margin-left: 20rpx;
}

.price-value {
        font-family: PingFangSC-Regular;
        /* font-size: 12px;
        color: #ccc; */
        width: 80%;
}

textarea {
        z-index: 1;
}

.footer {
        z-index: 3;
}
