.type {
    border-top: 1px solid #e7e7e7;
    height: 100rpx;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    /* overflow: hidden; */
    white-space: nowrap;
}

.type-item {
    height: 100rpx;
    /* display: flex; */
    display: inline-block;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
}

.type-c {
    height: 100%;
    display: flex;
    align-items: center;
    position: relative;
}

.oval {
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    right: -10rpx;
    top: 25%;
}

.active .type-c {
    border-bottom: 2px solid #5fc6ff;
}

.active .type-c text {
    color: #096dd9;
    font-weight: bold;
}

.type text {
    font-family: PingFangSC-Medium;
    font-size: 14px;
    color: #888;
    text-align: center;
    font-weight: 550;
}

.detail {
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: #fdfdfd;
    align-items: center;
}

.total {
    width: 90%;
    height: 300rpx;
    background-color: #fff;
    box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.1);
    margin-top: 30rpx;
    margin-bottom: 40rpx;
    display: flex;
    flex-direction: column;
}

.title {
    height: 80rpx;
    display: flex;
    padding: 20rpx;
}

.title text {
    font-family: PingFangSC-Medium;
    font-size: 18px;
    color: #353535;
    font-weight: bold;
}

.total-detail {
    height: 280rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.total-item {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.total-item image {
    width: 40rpx;
    height: 40rpx;
}

.total-name {
    margin-top: 10rpx;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #888;
    text-align: center;
}

.total-num {
    font-family: PingFangSC-Medium;
    font-size: 16px;
    color: #096dd9;
}

.detail-list {
    display: flex;
    flex-direction: column;
    width: 90%;
}

.list-item {
    margin: 20rpx 0;
    box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.1);
    background-color: #fff;
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.item-img {
    width: 180rpx;
    height: 180rpx;
    display: flex;
    box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.1);
}

.item-img image {
    width: 100%;
    height: 100%;
}

.item-info {
    width: 75%;
    height: 180rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* align-items: flex-start; */
}

.info-title {
    height: 50%;
    padding: 0 0 20rpx 20rpx;
    display: flex;
    align-items: flex-start;
}

.info-title text {
    font-family: PingFangSC-Medium;
    font-size: 16px;
    color: #888;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.info-count {
    height: 50%;
    display: flex;
    align-items: center;
}

.count {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.count-name {
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #888;
    text-align: center;
}

.count-value {
    margin-top: 10rpx;
    font-family: PingFangSC-Medium;
    font-size: 12px;
    color: #5fc6ff;
    text-align: center;
}
