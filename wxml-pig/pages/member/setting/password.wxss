page {
    height: 100%;
    background-color: #fff;
}


/*  */

.group {    
    height: 25%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.group-item {
    height: 70rpx;
    border-bottom: 1px solid #E5E5E5;
    padding: 10rpx 40rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.item-name {
    font-family: PingFangSC-Regular;
    font-size: 17px;
    color: #353535;
}

.item-nav {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #888;
    text-align: right;
}

.footer {
    position: fixed;
    bottom: 0;
    background-color: #2150b7;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 90rpx;
}

.footer text {
    ont-family: PingFangSC-Medium;
    font-size: 16px;
    color: #fff;
    text-align: center;
}
