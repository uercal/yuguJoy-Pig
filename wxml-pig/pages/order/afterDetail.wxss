    font-size: 26rpx;
    color: #777;
}

.cont-child {
    padding-top: 0rpx !important;
}

.down-p {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.down-p text {
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #353535;
    line-height: 22px;
}

.down-p::after {
    content: '';
    width: 15rpx;
    height: 15rpx;
    border-right: 2rpx solid #ccc;
    border-top: 2rpx solid #ccc;
    transform: rotate(135deg);
}

.down-p.active::after {
    content: '';
    margin-top: 7rpx;
    width: 15rpx;
    height: 15rpx;
    border-right: 2rpx solid #ccc;
    border-top: 2rpx solid #ccc;
    transform: rotate(-45deg);
}

