.cate-content {
    display: flex;
    flex-direction: row;
    font-size: 16px;
    position: fixed;
    top: 96rpx;
    bottom: 5rpx;
    width: 100%;
}

.cate-left {
    flex-direction: column;
    display: flex;
    width: 200rpx;
    color: #444;
    height: 100%;
}

.cate-right {
    display: flex;
    flex-direction: column;
    width: 550rpx;
    height: 100%;
    overflow: hidden;
}

.cate-right-cont {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    align-content: flex-start;
    padding-top: 26rpx;
}

.type-nav {
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    z-index: 10;
    background: #f8f8f8;
    display: block;
    font-size: 27rpx;
}

.type-nav.selected {
    background: #fff;
    color: #ff495e;
    border-right: none;
    font-size: 30rpx;
}

.cate-cont-box {
    margin-bottom: 30rpx;
    padding-bottom: 10rpx;
    background: #fff;
    overflow: hidden;
}

.cate-cont-box .cate-img {
    padding: 13rpx 13rpx 4rpx 13rpx;
}

.cate-cont-box .cate-img image {
    width: 100%;
    height: 150rpx;
}

.cate-cont-box text {
    text-align: center;
    display: block;
    font-size: 26rpx;
    padding-bottom: 14rpx;
    color: #444;
    padding: 0 15rpx 30rpx 15rpx;
}

.cate-two-box {
    width: 100%;
    padding: 0 10px;
}

/* asd */

.index-search-box {
    top: 1rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 999;
    position: fixed;
    background: #e5e5e5;
    padding: 18rpx 13rpx;
    border-bottom: 1px solid #eee;
}

.index-search {
    border-bottom: 0;
    background: #fff;
    border-radius: 4px;
    overflow: hidden;
    position: relative;
    font-size: 28rpx;
    color: #999;
    box-sizing: border-box;
    height: 64rpx;
    line-height: 64rpx;
}

.index-cont-search {
    width: 100%;
    font-size: 28rpx;
    position: relative;
    background: #fff;
    border-radius: 4px;
    display: flex;
}

.index-cont-search icon {
    position: absolute;
    left: 12%;
    margin-left: -70rpx;
    top: 50%;
    margin-top: -15rpx;
}

/*  */

.filter {
    height: 60rpx;
    background-color: #fdf6f5;
    margin-top: 102rpx;
    padding: 0 20rpx;
    display: flex;
}

.filter-item {
    width: 33.3333%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.item-active text {
    color: #e83828 !important;
}

.filter-item text {
    width: 40%;
    font-family: PingFangSC-Medium;
    font-size: 14px;
    color: #b2b2b2;
    letter-spacing: -0.34px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.filter-item text::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-right: 3rpx solid #ccc;
    border-bottom: 3rpx solid #ccc;
    transform: rotate(45deg);
}

.arrow1, .asc-arrow {
    width: 33.3333%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.arrow1 text, .asc-arrow  text {
    width: 40%;
    font-family: PingFangSC-Medium;
    font-size: 14px;
    color: #b2b2b2;
    letter-spacing: -0.34px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.arrow1::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-right: 3rpx solid #ccc;
    border-bottom: 3rpx solid #ccc;
    transform: rotate(45deg);
}

.asc-arrow::after {
    content: "";
    width: 15rpx;
    height: 15rpx;
    border-left: 3rpx solid #ccc;
    border-top: 3rpx solid #ccc;
    transform: rotate(45deg);
}

/*  */

.cate-name {
    height: 100rpx;
    background-color: #fff;
    display: flex;
    align-items: flex-end;
    padding-left: 40rpx;
}

.cate-name text {
    font-family: PingFangSC-Medium;
    font-size: 20px;
    color: #353535;
    letter-spacing: -0.24px;
}

/*  */

.goods-item {
    display: flex;
    padding: 10rpx 20rpx;
    height: 320rpx;
    background-color: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.goods-image {
    width: 33.333333%;
    height: 320rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.goods-image image {
    width: 280rpx;
    height: 280rpx;
}

.goods-attr {
    padding: 0rpx 10rpx;
    width: 66.6666666%;
    height: 320rpx;
    display: flex;
    flex-direction: column;
}

.goods-attr-up {
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.goods-attr-bottom {
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.goods-price {
    font-family: PingFangSC-Semibold;
    font-size: 14px;
    color: #e83828;
    letter-spacing: -0.22px;
    margin-bottom: 24rpx;
}

.goods-name {
    font-family: PingFangSC-Semibold;
    font-size: 15px;
    color: #888;
    letter-spacing: -0.25px;
    margin-bottom: 12rpx;
}

.goods-spec {
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #b2b2b2;
    letter-spacing: -0.22px;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods-service {
    margin-bottom: 20rpx;    
}

.service-item {
    font-family: PingFangSC-Medium;
    font-size: 10px;
    color: #8bc6ff;
    letter-spacing: -0.18px;
    border: 1px solid #58a3ec;
    border-radius: 4px;
    padding: 6rpx 12rpx;
    margin-right: 6rpx;
}
