.footer {
    position: fixed;
    height: 90rpx;
    bottom: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f76148;
}

.footer text {
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #fff;
}

.value {
    height: 90rpx;
    display: flex;
    align-items: center;
    background-color: #fff;
}

.value text {
    width: 30%;
    font-family: PingFangSC-Regular;
    font-size: 18px;
    color: #353535;
    text-align: center;
    margin-bottom: 5rpx;
}

.value-input-check {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #c9c9c9;
}

.value-input {
    width: 60%;
    font-size: 14px;
}

.account {
    display: flex;
    align-items: center;
    padding: 20rpx;
}

.account text {
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #f78b58;
    margin-left: 20rpx;
}

